.first_tab .goods_item {
  display: flex;
  border-bottom: 1rpx solid #cccccc;
}
.first_tab .goods_item .goods_pic {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .goods_pic image {
  width: 70%;
}
.first_tab .goods_item .goods_content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .goods_content .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.first_tab .goods_item .goods_content .good_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
