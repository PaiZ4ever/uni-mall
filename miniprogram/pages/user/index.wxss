page {
  background-color: #edece8;
}
.user_info {
  height: 45vh;
  overflow: hidden;
  background-color: #eb4450;
  position: relative;
}
.user_info .user_inf {
  position: relative;
}
.user_info .user_inf .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info .user_inf .user_message {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info .user_inf .user_message .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info .user_inf .user_message .user_name {
  color: #fff;
  margin-top: 40rpx;
  font-size: 30rpx;
}
.user_info .user_login {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid #fff;
  color: #fff;
  font-size: 38rpx;
  padding: 20rpx 60rpx 20rpx 60rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}
.user_content .user_main .history {
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history navigator .mine_num {
  color: var(--themeColor);
}
.user_content .user_main .order {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .user_main .order .order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .order .order_content {
  display: flex;
}
.user_content .user_main .order .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .order .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 45rpx;
}
.user_content .user_main .address {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .about {
  margin-top: 20rpx;
  background-color: #fff;
}
.user_content .user_main .about .about_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .about .item1 {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
}
